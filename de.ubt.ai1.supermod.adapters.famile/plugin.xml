<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.ubt.ai1.supermod.vcs.team.command.category"
            id="de.ubt.ai1.supermod.adapters.famile.actions.exportToFamile"
            name="Export to FAMILE">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:team.main?after=group5">
         <command
               commandId="de.ubt.ai1.supermod.adapters.famile.actions.exportToFamile"
               icon="icons/obj16/exportToFamile.gif"
               id="de.ubt.ai1.supermod.adapters.famile.actions.exportToFamile"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <with
                        variable="activeMenuSelection">
                     <reference
                           definitionId="de.ubt.ai1.supermod.vcs.team.resourceContributions">
                     </reference>
                  </with>
                  <with
                        variable="activeMenuEditorInput">
                     <reference
                           definitionId="de.ubt.ai1.supermod.vcs.team.resourceContributions">
                     </reference>
                  </with>
               </or>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.ubt.ai1.supermod.adapters.famile.handlers.ExportToFamileHandler"
            commandId="de.ubt.ai1.supermod.adapters.famile.actions.exportToFamile">
      </handler>
   </extension>         
</plugin>
